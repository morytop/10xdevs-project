---
import Layout from "@/layouts/Layout.astro";
import ResetPasswordForm from "@/components/auth/ResetPasswordForm";

// Enable SSR for this page (public route)
export const prerender = false;
---

<Layout title="Resetowanie hasła | AI Meal Planner">
  <main class="min-h-screen flex items-center justify-center px-4 py-12 bg-gray-50">
    <div class="w-full max-w-md space-y-8">
      {/* Header */}
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Resetowanie hasła</h1>
        <p class="mt-2 text-gray-600">Wprowadź swój adres email, a wyślemy Ci link do resetowania hasła</p>
      </div>

      {/* Form */}
      <ResetPasswordForm client:load />
    </div>
  </main>
</Layout>
