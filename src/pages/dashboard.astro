---
import Layout from "@/layouts/Layout.astro";

export const prerender = false;
---

<Layout title="Dashboard">
  <main class="container mx-auto py-8 px-4 min-h-screen">
    <header class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-2">Dashboard</h1>
      <p class="text-muted-foreground text-lg">Witaj w swoim panelu zarządzania planami posiłków</p>
    </header>

    <div class="max-w-2xl mx-auto">
      <div class="bg-muted rounded-lg p-8 text-center">
        <h2 class="text-xl font-semibold mb-4">Dashboard w trakcie implementacji</h2>
        <p class="text-muted-foreground">
          Ta strona zostanie wkrótce uzupełniona o funkcje zarządzania planami posiłków.
        </p>
      </div>
    </div>
  </main>
</Layout>
